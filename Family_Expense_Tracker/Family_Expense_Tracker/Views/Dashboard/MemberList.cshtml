@model IEnumerable<MemberModel>


<h3 class="text-warning fw-bold mb-3 text-center">@Model.FirstOrDefault()?.FamilyGroupName</h3>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-light fw-bold mb-0">Member List</h3>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Dashboard" asp-action="AddMember" class="btn btn-primary me-2">
            <i class="bi bi-plus-lg me-1"></i> Add Member
        </a>
    </div>
</div>

<table class="table table-responsive">
    <tr>
        <th>Member Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>

    @foreach (var member in Model)
    {
        <tr>
            <td>@member.MemberName</td>
            <td>@member.Email</td>
            <td class="text-center">
                <a class="btn btn-success" asp-controller="Dashboard" asp-action="AddMember" asp-route-UserID="@member.MemberUserID">Edit</a>
                <a class="btn btn-danger" asp-controller="Dashboard" asp-action="Delete" asp-route-UserID="@member.MemberUserID" onclick="return confirm('Are you sure you want to delete this Expense?');">Delete</a>
            </td>
        </tr>
    }
</table>
