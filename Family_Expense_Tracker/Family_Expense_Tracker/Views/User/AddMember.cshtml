@model Family_Expense_Tracker.Models.AddMember

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="text-light fw-bold text-center">Member Add/Edit</h3>
                    </div>
                    <div class="panel-body">
                        <div class="">
                            <div class="card">
                                <div class="card-body">
                                    <form class="forms-sample" method="post" asp-controller="User" asp-action="Save">
                                        @Html.HiddenFor(x => x.UserID)
                                        <!-- Saving Name Field -->
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Member Name<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="text"
                                                       id="Name"
                                                       name="Name"
                                                       class="form-control"
                                                       asp-for="Name"
                                                       placeholder="Enter Member Name" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">EmaiID<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="text"
                                                       id="Email"
                                                       name="Email"
                                                       class="form-control"
                                                       asp-for="Email"
                                                       placeholder="Enter Email ID" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Password<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="text"
                                                       id="Password"
                                                       name="Password"
                                                       class="form-control"
                                                       asp-for="Password"
                                                       placeholder="Enter Password" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Submit and Cancel Buttons -->
                                        <div class="form-group row">
                                            <div class="col-sm-9 offset-sm-3">
                                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                                @if(CommonVariable.Role() == "Admin")
                                                {
                                                    <a asp-controller="Dashboard" asp-action="AdminDashboard" class="btn btn-dark">Cancel</a>
                                                }
                                                else
                                                {
                                                    <a asp-controller="Dashboard" asp-action="MemberDashboard" class="btn btn-dark">Cancel</a>
                                                }
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
