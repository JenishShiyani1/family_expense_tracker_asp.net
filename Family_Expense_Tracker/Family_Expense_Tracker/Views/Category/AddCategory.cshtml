@model Family_Expense_Tracker.Models.CategoryModel

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="text-light fw-bold text-center">Category Add/Edit</h3>
                    </div>
                    <div class="panel-body">
                        <h4 class="text-success">@TempData["CategoryInsertMessage"]</h4>

                        <div class="">
                            <div class="card">
                                <div class="card-body">
                                    <form class="forms-sample" method="post" asp-controller="Category" asp-action="Save">
                                        @Html.HiddenFor(x => x.CategoryID)
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Category Name<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="text"
                                                       id="CategoryName"
                                                       name="CategoryName"
                                                       class="form-control"
                                                       asp-for="CategoryName"
                                                       placeholder="Enter CategoryName" />
                                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-check form-check-flat form-check-primary mb-3">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" asp-for="IsIncomeCategory"> IsIncomeCategory
                                            </label>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-9 offset-sm-3">
                                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                                <a asp-controller="Category" asp-action="CategoryList" class="btn btn-dark">Cancel</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>