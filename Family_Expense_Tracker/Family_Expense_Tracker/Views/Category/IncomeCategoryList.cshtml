@model IEnumerable<CategoryModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-light mb-0">Income Category List</h3>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Category" asp-action="AddCategory" class="btn btn-primary me-2">
            <i class="bi bi-plus-lg me-1"></i> Add Category
        </a>
    </div>
</div>

<table class="table table-responsive">
    <tr>
        <th>CategoryID</th>
        <th>CategoryName</th>
        <th>Actions</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryID</td>
            <td>@category.CategoryName</td>
            <td class="text-center">
                <a class="btn btn-success" asp-controller="Category" asp-action="AddCategory" asp-route-CategoryID="@category.CategoryID">
                    Edit
                </a>
                <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-CategoryID="@category.CategoryID" onclick="return confirm('Are you sure you want to delete this Category?');">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>