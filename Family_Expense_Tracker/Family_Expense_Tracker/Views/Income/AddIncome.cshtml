@model Family_Expense_Tracker.Models.IncomeModel

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="text-light fw-bold text-center">Income Add/Edit</h3>
                    </div>
                    <div class="panel-body">
                        <div class="">
                            <div class="card">
                                <div class="card-body">
                                    <form class="forms-sample" method="post" asp-controller="Income" asp-action="Save">
                                        @Html.HiddenFor(x => x.IncomeID)

                                        <!-- Category Dropdown -->
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Category<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <select id="CategoryID" name="CategoryID" asp-for="CategoryID" class="form-control text-light">
                                                    <option value="" selected>Select a category</option>
                                                    @if (ViewBag.CategoryList != null && ViewBag.CategoryList.Count > 0)
                                                    {
                                                        foreach (var category in ViewBag.CategoryList)
                                                        {
                                                            <option value="@category.CategoryID">
                                                                @category.CategoryName
                                                            </option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="" disabled>No categories available</option>
                                                    }
                                                </select>
                                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Amount Field -->
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Income Amount<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="number"
                                                       id="Amount"
                                                       name="Amount"
                                                       class="form-control"
                                                       asp-for="Amount"
                                                       placeholder="Enter Income Amount"
                                                       step="0.01" />
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Income Date Field -->
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Income Date<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <input type="date"
                                                       id="IncomeDate"
                                                       name="IncomeDate"
                                                       class="form-control"
                                                       asp-for="IncomeDate" />
                                                <span asp-validation-for="IncomeDate" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Notes Field -->
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Notes<span class="text-danger">*</span></label>
                                            <div class="col-md-9">
                                                <textarea id="Notes"
                                                          name="Notes"
                                                          class="form-control"
                                                          asp-for="Notes"
                                                          placeholder="Enter any notes here"
                                                          rows="3"></textarea>
                                                <span asp-validation-for="Notes" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Submit and Cancel Buttons -->
                                        <div class="form-group row">
                                            <div class="col-sm-9 offset-sm-3">
                                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                                <a asp-controller="Income" asp-action="IncomeList" class="btn btn-dark">Cancel</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
